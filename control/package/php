# vim:ft=sh

case $(os) in
    (Debian)
        package php5
        package php-apc
        ;;
    (OSX)
        brew_tap josegonzalez/php
        package php55 php55 --with-mysql --with-pgsql --with-fpm
        package php55-apcu
        package php55-xdebug
        package php55-xhprof
        ;;
esac
