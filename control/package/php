# vim:ft=sh

case $(os) in
    (Debian)
        package php5
        package php-apc
        ;;
    (OSX)
        brew_tap josegonzalez/php
        package php56 php56 --with-postgresql
        package php56-apcu
        package php56-memcached
        package php56-xdebug
        package php56-xhprof
        package composer
        ;;
esac
